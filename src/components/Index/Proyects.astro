---
import {proyectos} from '../../lib/data.js';
---

<section id="proyectos" class="py-20 bg-gradient-to-b from-gray-900 to-black relative overflow-hidden">
  <div class="absolute w-80 h-80 rounded-full bg-purple-600 opacity-10 blur-3xl -top-20 -right-20"></div>
  
  <div class="container mx-auto px-6 md:px-10 text-white relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">Nuestros <span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">Proyectos</span></h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">Una muestra de nuestro trabajo y creatividad</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
          proyectos.slice(-3).map((proyecto) => (
            <div class="group bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl border border-gray-700 hover:border-blue-500 transition-all duration-300 overflow-hidden hover:transform hover:-translate-y-2">
              <div class="relative overflow-hidden">
                <div class="h-48 bg-gradient-to-r from-blue-600 to-purple-600 relative">
                  <img
                    src={proyecto.image}
                    alt={proyecto.title}
                    class="w-full h-full object-cover"
                  />
                </div>
                <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-center justify-center gap-4">
                  <a
                    href={proyecto.site}
                    class="bg-blue-600 text-white px-6 py-2 rounded-xl font-semibold transition-all duration-300 transform hover:scale-105"
                  >
                    Visitar Sitio
                  </a>
                </div>
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold mb-3">
                  {proyecto.title}
                </h3>
                <p class="text-gray-300 mb-4 leading-relaxed">
                  {proyecto.description}
                </p>
                <div class="flex justify-between items-center text-sm text-gray-400">
                  <span>ðŸ•’ {proyecto.time}</span>
                  <span>{proyecto.type}</span>
                </div>
              </div>
            </div>
          ))
        }
    </div>
    
    <div class="text-center mt-12">
      <a href="/proyectos" class="inline-flex items-center gap-2 bg-transparent border-2 border-gray-700 hover:bg-white hover:text-black text-gray-300 font-semibold py-3 px-8 rounded-xl transition-all duration-300">
        <span>Ver todos los proyectos</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>